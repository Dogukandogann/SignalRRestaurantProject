@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Hakkımızda Yazı Güncelleme</div>
						</div>
						<input type="hidden" asp-for="AboutID" />
						<div class="card-body">
							<div class="form-group">
								<label for="AboutTitle">Başlık</label>
								<input type="text" class="form-control" asp-for="AboutTitle" id="AboutTitle">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="AboutImageUrl">Görsel Url</label>
								<input type="text" class="form-control" asp-for="AboutImageUrl" id="AboutImageUrl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="AboutDescription">Açıklama</label>
								<textarea rows="5" class="form-control" asp-for="AboutDescription" id="AboutDescription"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımızda Yazısı Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>



